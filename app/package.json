{
  "name": "genesis-project",
  "version": "1.0.0",
  "type": "module",
  "description": "Genesis is an experimental framework for organizing and retrieving structured knowledge using semantic clustering and role-based agents.",
  "main": "src/dist/index.js",
  "scripts": {
    "build": "tsc --outDir dist",
    "build:grammar": "npx peggy --format commonjs --output src/grammar/grammar.cjs src/grammar/grammar.pegjs",
    "start": "tsx src/index.ts --repl",
    "watch": "tsx watch src/index.ts",
    "watch:grammar": "chokidar \"src/grammar/grammar.pegjs\" -c \"npm run build:grammar\""
  },
  "keywords": [],
  "author": "Tiberiu Petre",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^5.0.6",
    "axios": "^1.13.2",
    "chalk": "^4.1.2",
    "chokidar": "^5.0.0",
    "discord.js": "^14.25.1",
    "dotenv": "^16.6.1",
    "emoji-regex": "^10.6.0",
    "esbuild": "^0.27.3",
    "express": "^5.2.1",
    "fs-extra": "^11.2.0",
    "ollama": "^0.6.3",
    "pg": "^8.17.2",
    "surrealdb": "^2.0.0-alpha.18",
    "uuid": "^13.0.0",
    "zod": "^4.3.6",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.19.31",
    "@types/pg": "^8.16.0",
    "peggy": "^5.0.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
